%table.table.table-hover
  - for site_user in @user.site_users
    %tr
      %td= site_user.site.name
      %td.right= site_user.role_name
      %td.right.icons
        = link_to icon(:edit), edit_admin_user_site_user_path(@user, site_user), remote: true
        = link_to icon(:trash), admin_user_site_user_path(@user, site_user), method: :delete, data: { confirm: t('.confirm_delete', name: @user.name_and_email, site: site_user.site.name) }

- if @user.site_users.count < Site.count
  %p
    = link_to icon(:plus), new_admin_user_site_user_path(@user), title: t('.new'), class: 'pull-right btn btn-success btn-sm', remote: true


