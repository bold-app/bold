<h2>Setup</h2>
<p><%= t '.hello', name: current_user.display_name %></p>
<p><%= t '.intro' %></p>

<%= simple_form_for @site, url: setup_site_path do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :theme_name, collection: Bold::Theme.all_themes, value_method: :id, label_method: :name, include_blank: false %>
    <%= f.input :hostname, placeholder: 'example.com' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('.submit'), class: 'btn-primary' %>
  </div>

<% end %>

